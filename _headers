/*
  # Impedisce che il sito venga inserito in iframe (clickjacking)
  X-Frame-Options: DENY

  # Blocca il browser dallâ€™interpretare contenuti con tipo MIME sbagliato
  X-Content-Type-Options: nosniff

  # Politica di referrer per privacy (non invia referrer in downgrade HTTPS->HTTP)
  Referrer-Policy: strict-origin-when-cross-origin

  # Abilita HTTPS rigoroso per 2 anni, include sottodomini e preload
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload

  # Politica di sicurezza contenuti molto restrittiva (modifica a seconda delle tue risorse)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'none'; base-uri 'self';

  # Blocca alcune API non usate (Feature-Policy / Permissions-Policy)
  Permissions-Policy: geolocation=(), microphone=(), camera=()

